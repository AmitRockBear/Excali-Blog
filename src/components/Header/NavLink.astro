---
interface Props {
  link: {
    text: string
    href: string
    isExternal: boolean
  }
}

const { link } = Astro.props
const { text, href, isExternal } = link
---

<li class="hover:text-yellow-300 hover:-translate-y-0.5">
  <a href={href} target={isExternal ? "_blank" : "_self"}>{text}</a>
</li>
