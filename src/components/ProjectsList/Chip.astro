---
const chipTextToColor = {
  React: "bg-sky-400 text-sky-900",
  Typescript: "bg-blue-400 text-blue-900",
  Tailwind: "bg-cyan-400 text-cyan-900",
  Astro: "bg-violet-400 text-violet-900",
  Zod: "bg-teal-400 text-teal-900",
  Trpc: "bg-pink-400 text-pink-900",
  Winston: "bg-slate-400 text-slate-900",
  Prisma: "bg-emerald-400 text-emerald-900",
  Jwt: "bg-orange-400 text-orange-900",
  Javascript: "bg-yellow-400 text-yellow-900",
  Ejs: "bg-amber-400 text-amber-900",
  Postgersql: "bg-stone-400 text-stone-900",
  Mongo: "bg-green-400 text-green-900",
}

interface Props {
  text: string
  // text: keyof typeof chipTextToColor
}

const { text } = Astro.props as { text: keyof typeof chipTextToColor }

const colorClasses = chipTextToColor[text] ?? "bg-sky-400 text-sky-900"
---

<div
  class=`${colorClasses} center relative inline-block select-none whitespace-nowrap rounded-lg py-2 px-2 align-baseline font-sans text-xs font-bold uppercase leading-none mr-2 mt-2`
>
  {text}
</div>
